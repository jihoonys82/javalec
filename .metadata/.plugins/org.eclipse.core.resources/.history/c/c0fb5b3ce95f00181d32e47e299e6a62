package condition.loop;

public class WhileEx_02 {

	public static void main(String[] args) {
		
		//use while statement
		// Q1. print 0 ~ 9 
		
		// Q2. print "Hello" 6 times
		
		// Q3. print 5 4 3 2 1 0 
		
		int i= 0;
		while(i<10) {
			System.out.println(i);
			i++;
		}
		
		
	}

}
