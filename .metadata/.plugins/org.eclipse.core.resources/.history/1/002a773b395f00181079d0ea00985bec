package condition.loop;

public class ForEx_07 {
	public static void main(String[] args) {
		
		//첫날에 10원 입금
		//다음날에는 2배 입금 
		//보름 동안 저축금액? 
		
		int money = 0; 
		int incre = 10; 
		for(int i=0;i<15;i++) {
			money += incre;
			incre *= 2; 
			//TEEST - print increment -
			System.out.println("[Test] " +i +" money : " +money + ", incre : " +incre);
		}
		System.out.println("Saved money : " + money);

	}
	
}
